---
import Email from "@assets/icons/email.astro"
import Linkedin from "@assets/icons/linkedin.astro"
import Link from "@components/Link.astro"
import BaseLayout from "@layouts/BaseLayout.astro"
---

<BaseLayout>
  <section class="my-10">
    <p
      class="relative z-10 bg-linear-(--gradient-accent) bg-clip-text text-transparent text-3xl text-center mb-6"
      >I'm looking to work on something new&nbsp;<span class="text-white">âœ¨</span></p
    >
    
    <article
      style={{
        backgroundImage: "radial-gradient(circle, #6c6c6c30 0%, transparent 100%)",
      }}
      class="flex flex-col justify-between rounded-lg border border-zinc-700 bg-zinc-900 bg-opacity-40 p-8 mb-6"
    >
      <Link excludeIcon className="mb-4 flex justify-between hover:[&_svg]:text-orange" target="_blank" href="https://www.linkedin.com/in/krystof-spiller">
        <h3 class="text-xl font-semibold">Reach out on LinkedIn</h3>
        <Linkedin />
      </Link>

      <Link className="flex justify-between hover:[&_svg]:text-orange" target="_blank" href="mailto:krystof.spiller@gmail.com">
        <h3 class="text-xl font-semibold">Write me an email</h3>
        <Email />
      </Link>
    </article>

    <div style="width:100%;height:100%;overflow:scroll" id="my-cal-inline"></div>
  </section>
</BaseLayout>

